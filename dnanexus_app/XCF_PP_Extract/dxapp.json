{
  "name": "XCF_PP_Extract",
  "title": "XCFTools PP extraction (conversion to SAPPHIRE binary)",
  "summary": "Extracts low-PP heterozygous variants",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "xcf_bcf",
      "label": "XCF BCF file",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "xcf_bcf_idx",
      "label": "XCF BCF index file",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "xcf_bin",
      "label": "XCF binary file",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "xcf_fam",
      "label": "XCF pedigree file",
      "class": "file",
      "optional": false,
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "pp_threshold",
      "label": "PP threshold",
      "class": "float",
      "optional": true,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "sapphire_bin",
      "label": "SAPPHIRE binary file",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "bash",
    "file": "src/XCF_PP_Extract.sh",
    "distribution": "Ubuntu",
    "release": "24.04",
    "version": "0",
    "execDepends": [
      {"name": "bcftools"}
    ]
  },
  "regionalOptions": {
    "aws:eu-west-2": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem2_ssd1_v2_x32"
        }
      }
    }
  }
}

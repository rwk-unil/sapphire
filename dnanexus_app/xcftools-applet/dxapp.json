{
  "name": "xcftools-applet",
  "title": "XCFTools Applet",
  "summary": "Applet wrapper around XCFTools",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "arguments",
      "label": "Arguments to XCFTools",
      "class": "string",
      "optional": false,
      "help": ""
    },
    {
      "name": "localodir",
      "label": "Local output directory",
      "class": "string",
      "optional": false,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "output",
      "label": "Output files",
      "class": "array:file",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "days": 14
      }
    },
    "interpreter": "bash",
    "file": "src/xcftools-applet.sh",
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0"
  },
  "access": {
    "network": [
      "*"
    ],
    "project": "CONTRIBUTE"
  },
  "regionalOptions": {
    "aws:eu-west-2": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem3_ssd1_v2_x2"
        }
      }
    }
  }
}

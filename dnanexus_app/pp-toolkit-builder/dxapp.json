{
  "name": "pp-toolkit-builder",
  "title": "PP Toolkit Builder Applet",
  "summary": "Builds the PP Toolkit applet",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "label",
      "label": "Label to avoid cached builds, write date or something",
      "class": "string",
      "optional": true,
      "default": "default",
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "pp_extract",
      "label": "PP Toolkit : PP Extractor",
      "class": "applet",
      "help": ""
    },
    {
      "name": "pp_extract_split",
      "label": "PP Toolkit : PP Extractor (split VCF version)",
      "class": "applet",
      "help": ""
    },
    {
      "name": "bin_splitter",
      "label": "PP Toolkit : bin splitter",
      "class": "applet",
      "help": ""
    },
    {
      "name": "phase_caller",
      "label": "PP Toolkit : Phase caller",
      "class": "applet",
      "help": ""
    },
    {
      "name": "bin_merger",
      "label": "PP Toolkit : bin merger",
      "class": "applet",
      "help": ""
    },
    {
      "name": "pp_update",
      "label": "PP Toolkit : PP Updater",
      "class": "applet",
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "bash",
    "file": "src/pp-toolkit-builder.sh",
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0",
    "execDepends": [
      {"name": "libssl-dev"},
      {"name": "libdeflate-dev"}
    ]
  },
  "access": {
    "network": [
      "*"
    ]
  },
  "regionalOptions": {
    "aws:eu-west-2": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem2_ssd1_v2_x2"
        }
      }
    }
  }
}
